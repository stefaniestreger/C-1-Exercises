using static System.Console;
class Sum200
{
   static void Main()
   {
     int i = 1;
     int totalHalf = 0;
     int totalSum = 0;
     
     for(i = 0; i <= 100; i++)
       totalHalf += i;

     for(i = 0; i <= 200; i++)
       totalSum += i;

     WriteLine("Running total of first 100 numbers: " + totalHalf);
     WriteLine("Running total of all numbers: " + totalSum);
   }
}
